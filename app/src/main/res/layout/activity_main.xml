<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.jessyan.camerafilters.demo.me.jess.camerafilters.demo.MainActivity">


    <me.jessyan.camerafilters.demo.widget.CameraSurfaceView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/bt_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:onClick="onClick"
            android:text="无滤镜" />

        <Button
            android:id="@+id/bt_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:layout_centerInParent="true"
            android:onClick="onClick"
            android:text="内置滤镜" />

        <Button
            android:id="@+id/bt_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="扩展滤镜" />
    </RelativeLayout>


</RelativeLayout>
